;;------------------------------------------------------------------------------
;; Initialize third party packages - packages that are not emacs built-in and
;; are not elpa managed.
;;------------------------------------------------------------------------------
(eval-when-compile (require 'cl-lib))

;; Load all paths under site-lisp directory
(if (fboundp 'normal-top-level-add-to-load-path)
    (let* ((my-lisp-dir "~/.emacs.d/site-lisp/")
           (default-directory my-lisp-dir))
      (progn
        (setq load-path
              (append
               (cl-loop for dir in (directory-files my-lisp-dir)
                        unless (string-match "^\\." dir)
                        collecting (expand-file-name dir))
               load-path)))))

(provide 'init-site-packages)
